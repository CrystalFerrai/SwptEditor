<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style
        x:Key="ImageEnableStyle"
        TargetType="{x:Type FrameworkElement}">
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.3" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style
        x:Key="ToolbarButtonInnerStyle"
        TargetType="{x:Type Button}">
        <Setter Property="ToolTipService.ShowOnDisabled" Value="True" />
        <Setter Property="Command" Value="{Binding Command}" />
        <Setter Property="Content" Value="{Binding}" />
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Image
                        Stretch="None"
                        Source="{Binding Icon}"
                        Style="{StaticResource ImageEnableStyle}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="ToolbarButtonStyle"
        TargetType="{x:Type ContentPresenter}">
        <Setter Property="ToolTip" Value="{Binding ToolTip}" />
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Button
                        Style="{StaticResource ToolbarButtonInnerStyle}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="ToolbarButtonBorderlessStyle"
        TargetType="{x:Type ContentPresenter}">
        <Setter Property="ToolTip" Value="{Binding ToolTip}" />
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Button>
                        <Button.Style>
                            <Style
                                TargetType="{x:Type Button}"
                                BasedOn="{StaticResource ToolbarButtonInnerStyle}">
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Background" Value="Transparent" />
                            </Style>
                        </Button.Style>
                    </Button>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>